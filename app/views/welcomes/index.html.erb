<h1>CryptoTool</h1>
<%= form_with(url: "/welcomes/crypto", method: "post") do %>
    <%= text_field_tag( :password ) %>
    <%= select_tag( :action, options_for_select( [["Encrypt", "encrypt"], ["Decrypt", "decrypt"]], 1 ) ) %>
    <%= submit_tag("Submit") %>
<% end %>
<div>
    <% if @success %>
        <p><%= @error %></p>
    <% end %>
</div>
<div id="result">
    <p>Result:</p>
    <% if @success %>
        <p><%= @result %></p>
    <% end %>
</div>
<div id="resultURLEncoded">
    <p>Result URL Encoded:</p>
    <% if @success %>
        <p><%= @result_URL_encoded %></p>
    <% end %>
</div>
<div id="resultURLDecoded">
    <p>Result URL Decoded:</p>
    <% if @success %>
        <p><%= @result_URL_decoded %></p>
    <% end %>
</div>